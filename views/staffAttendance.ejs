<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Attendance</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: cursive;
        }

        body {
            background-color: aliceblue;
            display: grid;
            justify-content: center;
            align-items: center;
            height: auto;
        }

        h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        table, tr, th, td {
            border: 2px solid black;
            border-collapse: collapse;
            padding: 15px;
        }

        .attendance-section {
            margin-bottom: 40px;
        }

        .fixed-link {
            position: fixed;
            top: 10px;
            right: 10px;
            background-color: #333;
            color: white;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
        }

        .fixed-link:hover {
            background-color: #555;
        }
    </style>
</head>
<body>
    <a href="/" class="fixed-link">Go Home</a>

    <div id="attendanceContainer"></div>

    <script>
        const attendanceString = '<%- JSON.stringify(attendance) %>';
        const allAttendees= JSON.parse(attendanceString);

        var groupedByDate = allAttendees.reduce((group, attendee) => {
            var date = attendee.dateToday;
            if (!group[date]) {
                group[date] = [];
            }
            group[date].push(attendee);
            return group;
        }, {});

        function createTableForDate(date, attendees) {
            var section = document.createElement('div');
            section.className = 'attendance-section';

            var heading = document.createElement('h3');
            heading.textContent = `Staff Attendance on ${date}`;
            section.appendChild(heading);

            var table = document.createElement('table');
            var headerRow = document.createElement('tr');
            var headers = ['No.', 'Name', 'Desk', 'Time In', 'Time Out', 'Date'];
            headers.forEach(header => {
                var th = document.createElement('th');
                th.textContent = header;
                headerRow.appendChild(th);
            });
            table.appendChild(headerRow);

            attendees.forEach((attendee, index) => {
                var row = document.createElement('tr');

                var noCell = document.createElement('td');
                noCell.textContent = index + 1;
                row.appendChild(noCell);

                var nameCell = document.createElement('td');
                nameCell.textContent = attendee.staffName;
                row.appendChild(nameCell);

                var deskCell = document.createElement('td');
                deskCell.textContent = attendee.staffDesk;
                row.appendChild(deskCell);

                var timeInCell = document.createElement('td');
                timeInCell.textContent = attendee.timeIn;
                row.appendChild(timeInCell);

                var timeOutCell = document.createElement('td');
                timeOutCell.textContent = attendee.timeOut;
                row.appendChild(timeOutCell);

                var dateCell = document.createElement('td');
                dateCell.textContent = attendee.dateToday;
                row.appendChild(dateCell);

                table.appendChild(row);
            });

            section.appendChild(table);
            document.getElementById('attendanceContainer').appendChild(section);
        }

        for (var date in groupedByDate) {
            createTableForDate(date, groupedByDate[date]);
        }
    </script>
</body>
</html>
